{
  "$schema" : "http://json-schema.org/draft/2019-09/schema#",
  "$id" : "http://encity.co.uk/dto-schemas/patch-tenancy-command.json",
  "title" : "Generic schema for requests to update tenancies",
  "description" : "Used to validate incoming request types for tenancy updates (transitions)",

  "properties" : {
    "action" : {
      "type": "string",
      "enum": [
        "confirm",
        "reject",
        "change_portfolio",
        "change_hmrc_agent_vat_enablement",
        "change_portfolio_member_vat_enabled",
        "change_portfolio_member_vat_reg_no",
        "change_portfolio_member_direct_auth",
        "change_portfolio_member_direct_contact",
        "request_hmrc_agent_vat_authorisation",
        "request_hmrc_vat_authz",
        "add_portfolio_member",
        "delete_portfolio_member",
        "multi_patch"]
    },
    "details" : {
      "type": "object"
    }
  },

  "required" : ["action"]
}